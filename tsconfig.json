{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES2015"],
        "outDir": "./dist",
        "rootDir": "./src",

        "downlevelIteration": true,

        "strict": true,

        "strictPropertyInitialization": false,

        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@shared/*": ["shared/*"],
            "@config/*": ["config/*"]
        },
        "types": ["./src/@types/express"],

        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "forceConsistentCasingInFileNames": true
    }
}
